extends ../../layout

block content
  // Page Wrapper
  #wrapper
    include ../../helpers/supervisor-sidebar
    // Content Wrapper
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        include ../../helpers/topbar
        // Begin Page Content
        .container-fluid
          // Page Heading
          .d-sm-flex.align-items-center.justify-content-between.mb-4
            h1.h3.mb-0.text-gray-800 Registro de incidencias
            h6#cumplimientoTmo
            h6#promedioTmo.mb-0.text-success
          .row(style='width: 100%')
            form.user(action='/info' method='POST' style='width: 100%' onsubmit='cls()')
              .row(style='width: 100%')
                .col.form-group
                  select.form-control.selectpicker(name='txtType' required='true' data-live-search='true' data-show-subtext='true')
                    option(selected='' value='') Asesor
              .row(style='width: 100%')
                .col
                  br
                  textarea#txtMessage.form-control(name="txtMessage" required='true' placeholder='Descripción del aviso')
              .row.text-center(style='width: 100%')
                .col
                  br
                  button.btn.btn-outline-success.align-content-center(type='submit') Guardar
          // /.container-fluid
          br
          // DataTales Example
          .card.shadow.mb-4
            .card-header.py-3
              h6.m-0.font-weight-bold.text-primary Notificaciones enviadas
            .card-body
              .table-responsive
                table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                  thead
                    tr
                      th(width='50') Título
                      th Descripción
                      th(width='50') Tipo
                      th(width='50') Estado
                      th(width='50') Opciones
                  tfoot
                    tr
                      th Título
                      th Descripción
                      th Tipo
                      th Estado
                      th Opciones
                  tbody
        // End of Main Content
        include ../../helpers/footer
        include ../../helpers/logout
  //JQuery
  script(src='/vendor/jquery/jquery.min.js')
  link(href='https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css', rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js')
  // Data table Scripts
  script(src='/vendor/datatables/jquery.dataTables.min.js')
  script(src='/javascripts/demo/datatables-demo.js')
  // The core Firebase JS SDK is always required and must be listed first
  script(src='https://www.gstatic.com/firebasejs/6.6.2/firebase-app.js')
  // Add Firebase products that you want to use
  script(src='https://www.gstatic.com/firebasejs/5.10.1/firebase-database.js')
  script(src='https://www.gstatic.com/firebasejs/6.3.4/firebase-firestore.js')
  script(src='/javascripts/firebase.conf.js')
  script(src='/javascripts/user/supervisor-info.js')
  script(src='/javascripts/indicator.js')
  script(src='/javascripts/vanilla-notify.js')
  script(src='/javascripts/user/user-notify-datatable.js')