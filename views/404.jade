extends layout

block content
    // Page Wrapper
    #wrapper
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Begin Page Content
          .container-fluid
            // 404 Error Text
            .text-center
              .error.mx-auto(data-text='404') 404
              p.lead.text-gray-800.mb-5 Page Not Found
              p.text-gray-500.mb-0 It looks like you found a glitch in the matrix...
              a(href='/') ← Back
          // /.container-fluid
          // End of Main Content
          // Footer
          footer.sticky-footer.bg-white
            .container.my-auto
              .copyright.text-center.my-auto
                span Copyright © Your Website 2019
          // End of Footer
          // End of Content Wrapper
          // End of Page Wrapper
          // Scroll to Top Button
          a.scroll-to-top.rounded(href='#page-top')
            i.fas.fa-angle-up